{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Categor√≠a {{ cit_categoria.nombre }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Editar ' + cit_categoria.nombre) %}
        {{ topbar.button_cancel() }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_categoria_id': cit_categoria.id} %}
        {% call f.form_tag('cit_categorias.edit', fid='cit_categoria_form', **form_kwargs) %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
