{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Día Inhábil {{ cit_dia_inhabil.fecha }}{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar Día Inhábil ' + cit_dia_inhabil.fecha | string) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_dia_inhabil_id': cit_dia_inhabil.id} %}
        {% call f.form_tag('cit_dias_inhabiles.edit', fid='cit_dia_inhabil_form', **form_kwargs) %}
            {% call f.form_group(form.fecha) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
{% endblock %}
