{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Municipio {{ municipio.nombre }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Municipio ' + municipio.nombre) %}
        {{ topbar.button_previous('Municipios', url_for('municipios.list_active')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card() %}
        {{ detail.label_value_big('Nombre', municipio.nombre) }}
        {{ detail.label_value('Creado', moment(municipio.creado, local=True).format('llll')) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ detail.moment_js(moment) }}
{% endblock %}
